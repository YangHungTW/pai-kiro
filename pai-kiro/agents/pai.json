{
  "name": "pai",
  "description": "${PAI_ASSISTANT_NAME} - ${PAI_USER_NAME}'s Personal AI Assistant",
  "model": "claude-sonnet-4.5",
  "prompt": "file://../steering/identity.md",
  "tools": ["*"],
  "allowedTools": ["read", "write", "shell", "glob", "grep", "@anytype/*", "@github/*"],
  "resources": [
    "file://../steering/**/*.md",
    "file://../skills/**/*.md",
    "file://../memory/README.md",
    "file://../memory/state/*.json"
  ],
  "includeMcpJson": true,
  "hooks": {
    "agentSpawn": [
      {
        "command": "bun run ~/.kiro/hooks/initialize-session.ts"
      },
      {
        "command": "bun run ~/.kiro/hooks/load-core-context.ts"
      },
      {
        "command": "bun run ~/.kiro/hooks/capture-all-events.ts --event-type SessionStart"
      }
    ],
    "userPromptSubmit": [
      {
        "command": "bun run ~/.kiro/hooks/ExplicitRatingCapture.hook.ts"
      },
      {
        "command": "bun run ~/.kiro/hooks/update-tab-titles.ts"
      },
      {
        "command": "bun run ~/.kiro/hooks/capture-all-events.ts --event-type UserPromptSubmit"
      }
    ],
    "preToolUse": [
      {
        "matcher": "shell",
        "command": "bun run ~/.kiro/hooks/security-validator.ts"
      },
      {
        "command": "bun run ~/.kiro/hooks/capture-all-events.ts --event-type PreToolUse"
      }
    ],
    "postToolUse": [
      {
        "command": "bun run ~/.kiro/hooks/capture-all-events.ts --event-type PostToolUse"
      }
    ],
    "stop": [
      {
        "command": "bun run ~/.kiro/hooks/stop-hook.ts"
      },
      {
        "command": "bun run ~/.kiro/hooks/capture-all-events.ts --event-type Stop"
      }
    ]
  }
}

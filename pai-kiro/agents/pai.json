{
  "name": "pai",
  "description": "${PAI_ASSISTANT_NAME} - ${PAI_USER_NAME}'s Personal AI Assistant",
  "model": "claude-sonnet-4",
  "prompt": "file://../steering/identity.md",
  "tools": ["*"],
  "allowedTools": ["read", "write", "shell", "glob", "grep", "@anytype/*", "@github/*"],
  "resources": [
    "file://../steering/**/*.md",
    "file://../skills/**/*.md",
    "file://../memory/README.md",
    "file://../memory/state/*.json"
  ],
  "includeMcpJson": true,
  "hooks": {
    "agentSpawn": [
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/initialize-session.ts"],
        "timeout_ms": 10000
      },
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/load-core-context.ts"],
        "timeout_ms": 10000
      },
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/capture-all-events.ts", "--event-type", "SessionStart"],
        "timeout_ms": 5000
      }
    ],
    "userPromptSubmit": [
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/update-tab-titles.ts"],
        "timeout_ms": 5000
      },
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/capture-all-events.ts", "--event-type", "UserPromptSubmit"],
        "timeout_ms": 5000
      }
    ],
    "preToolUse": [
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/security-validator.ts"],
        "matcher": "shell",
        "timeout_ms": 5000
      },
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/capture-all-events.ts", "--event-type", "PreToolUse"],
        "timeout_ms": 5000
      }
    ],
    "postToolUse": [
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/capture-all-events.ts", "--event-type", "PostToolUse"],
        "timeout_ms": 5000
      }
    ],
    "stop": [
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/stop-hook.ts"],
        "timeout_ms": 10000
      },
      {
        "command": "bun",
        "args": ["run", "$HOME/.kiro/hooks/capture-all-events.ts", "--event-type", "Stop"],
        "timeout_ms": 5000
      }
    ]
  }
}
